<h1>Edit task </h1>
<%= form_for(@task) do |f| %>
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control'%>
    <%= f.label :details, class: 'form-label' %>
    <%= f.text_field :details, class: 'form-control'%>
    <%= f.check_box :completed %>
    <%= f.label :completed, "Completed", class: 'form-label' %>
    <br>
    <%= f.submit class: 'btn btn-primary mt-2' %>
  <% end %>
